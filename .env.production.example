# HN Watcher PWA â€” Production Environment
#
# Copy to .env.production.local and set actual values
# This file is for Firebase production deployment

NODE_ENV=production

# Frontend Configuration
# These values are injected into the built bundle at compile time
VITE_VAPID_PUBLIC_KEY=<your-vapid-public-key>
VITE_BACKEND_URL=https://hnwatch-default.cloudfunctions.net
VITE_HN_API_BASE=https://hacker-news.firebaseio.com

# Backend Configuration
# Set via Firebase Functions config (don't commit to git):
# firebase functions:config:set vapid.public="YOUR_KEY" vapid.private="YOUR_KEY"
VAPID_PUBLIC_KEY=<your-vapid-public-key>
VAPID_PRIVATE_KEY=<your-vapid-private-key>
FIREBASE_PROJECT_ID=hnwatch-default

# Firebase Hosting
FIREBASE_HOSTING_SITE_ID=hnwatchpwa

# Production-specific retry settings
MAX_RETRIES=5
INITIAL_RETRY_DELAY_MS=2000
MAX_RETRY_DELAY_MS=30000
BACKOFF_MULTIPLIER=2

# Analytics (enable in production)
ENABLE_ANALYTICS=true

# Notification frequency
NOTIFICATION_INTERVAL_HOURS=1

# Cleanup
CLEANUP_INTERVAL_HOURS=24
